{
  "name": "@rxreyn3/azure-devops-mcp",
  "version": "1.9.0",
  "description": "MCP server for Azure DevOps agent and queue management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "azure-devops-mcp": "dist/index.js"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "release": "changeset publish",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:watch:unit": "vitest --watch tests/unit",
    "test:watch:integration": "vitest --watch tests/integration",
    "test:watch:coverage": "vitest --watch --coverage",
    "test:watch:ui": "vitest --watch --ui",
    "test:watch:related": "vitest --watch --related",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:open": "vitest run --coverage && open coverage/index.html",
    "test:coverage:watch": "vitest --coverage --watch",
    "test:coverage:threshold": "vitest run --coverage --reporter=verbose",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:unit:coverage": "vitest run tests/unit --coverage",
    "test:integration:coverage": "vitest run tests/integration --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose --reporter=json --reporter=junit --outputFile.json=./test-results.json --outputFile.junit=./test-results.xml",
    "test:ci:unit": "vitest run tests/unit --coverage --reporter=verbose --reporter=json --outputFile.json=./test-results-unit.json",
    "test:ci:integration": "vitest run tests/integration --coverage --reporter=verbose --reporter=json --outputFile.json=./test-results-integration.json",
    "test:performance": "vitest run --reporter=verbose --reporter=json --outputFile.json=./test-results.json && node scripts/test-performance.js",
    "test:silent": "vitest run --reporter=basic",
    "test:bail": "vitest run --bail=1"
  },
  "keywords": [
    "mcp",
    "azure-devops",
    "model-context-protocol",
    "claude",
    "ai",
    "agents",
    "queues"
  ],
  "author": "Ryan Reynolds <rxreyn3@github.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rxreyn3/azure-devops-mcp.git"
  },
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "azure-devops-node-api": "^15.1.0",
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^22.15.30",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
